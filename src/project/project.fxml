<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>


<GridPane alignment="CENTER" hgap="10.0" vgap="10.0"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="project.Controller">


<Label style="-fx-font: NORMAL 20 Ariel;"
       text="Schedule"
       GridPane.columnIndex="0"
       GridPane.rowIndex="0"
       GridPane.halignment="CENTER"
     />


<TableView fx:id="table" GridPane.columnIndex="0" GridPane.rowIndex="1">
           <columns>
                <TableColumn text = "Name" prefWidth = "100">
                    <cellValueFactory>
                        <PropertyValueFactory property = "name"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text = "Sunday" prefWidth = "100">
                    <cellValueFactory>
                        <PropertyValueFactory property = "sunday"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text = "Monday" prefWidth = "100">
                    <cellValueFactory>
                        <PropertyValueFactory property = "monday"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text = "Tuesday" prefWidth = "100">
                    <cellValueFactory>
                        <PropertyValueFactory property = "tuesday"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text = "Wednesday" prefWidth = "100">
                    <cellValueFactory>
                        <PropertyValueFactory property = "wednesday"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text = "Thursday" prefWidth = "100">
                    <cellValueFactory>
                        <PropertyValueFactory property = "thursday"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text = "Friday" prefWidth = "100">
                    <cellValueFactory>
                        <PropertyValueFactory property = "friday"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text = "Saturday" prefWidth = "100">
                    <cellValueFactory>
                        <PropertyValueFactory property = "saturday"/>
                    </cellValueFactory>
                </TableColumn>
           </columns>

</TableView>

</GridPane>
